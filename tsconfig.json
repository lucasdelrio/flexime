{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "bundler",          // <- important
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": { "~/*": ["src/*"] }
  },
  "include": ["app", "src", "assets"],
  "extends": "expo/tsconfig.base"
}
